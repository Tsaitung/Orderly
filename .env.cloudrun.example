# Cloud Run Environment Configuration
# Copy this file to .env.cloudrun and configure for your project

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-project-id-here
GOOGLE_CLOUD_REGION=asia-east1
GOOGLE_CLOUD_ZONE=asia-east1-a

# Database Configuration
POSTGRES_PASSWORD=your_super_secure_database_password_here
POSTGRES_USER=orderly
POSTGRES_DB=orderly
DB_INSTANCE_NAME=orderly-db

# Redis Configuration
REDIS_INSTANCE_NAME=orderly-cache

# Security Configuration
JWT_SECRET=your_super_secure_jwt_secret_minimum_32_chars_here
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_minimum_32_chars_here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# API Configuration
API_RATE_LIMIT_MAX=1000
API_RATE_LIMIT_WINDOW=900000

# Cloud Run Resource Configuration
CLOUD_RUN_MEMORY=512Mi
CLOUD_RUN_CPU=1
CLOUD_RUN_MIN_INSTANCES=0
CLOUD_RUN_MAX_INSTANCES=10
CLOUD_RUN_CONCURRENCY=100
CLOUD_RUN_TIMEOUT=300

# Cost Optimization Settings
# For staging/dev environments, use smaller instances:
# CLOUD_RUN_MEMORY=256Mi
# CLOUD_RUN_CPU=0.5
# CLOUD_RUN_MIN_INSTANCES=0
# CLOUD_RUN_MAX_INSTANCES=3

# Monitoring Configuration
ENABLE_MONITORING=true
ENABLE_LOGGING=true
LOG_LEVEL=info

# Feature Flags
ENABLE_CACHE=true
ENABLE_RATE_LIMITING=true
ENABLE_CIRCUIT_BREAKER=true

# Development/Testing Configuration
NODE_ENV=production
DEBUG=false