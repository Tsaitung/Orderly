{
  "name": "@orderly/root",
  "version": "1.0.0",
  "description": "井然 Orderly - 餐飲產業全鏈路數位供應平台",
  "private": true,
  "workspaces": [
    "shared/types",
    "backend/user-service-fastapi",
    "backend/order-service-fastapi",
    "backend/product-service-fastapi",
    "backend/acceptance-service-fastapi",
    "backend/billing-service-fastapi",
    "backend/notification-service-fastapi"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "preview": "next start",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:frontend": "jest --testMatch='**/app/**/*.test.(ts|tsx)' --testMatch='**/components/**/*.test.(ts|tsx)' --passWithNoTests",
    "test:integration": "jest --testMatch='**/tests/integration/**/*.test.(ts|js)' --passWithNoTests",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --max-warnings 1000 --rule 'no-console: off' --rule 'curly: off' --rule 'prefer-const: warn' --rule 'no-duplicate-imports: warn' --rule 'react-hooks/exhaustive-deps: warn'",
    "lint:fix": "next lint --fix",
    "type-check": "tsc -p tsconfig.staging.json --noEmit",
    "type-check:full": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "rm -rf .next",
    "setup": "npm install && npm run build",
    "dev:backend": "echo 'Use docker compose up to run FastAPI services'"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
