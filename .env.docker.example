# Docker Environment Configuration
# Copy this file to .env.docker for local Docker development

# Database Configuration
POSTGRES_DB=orderly
POSTGRES_USER=orderly
POSTGRES_PASSWORD=orderly_secure_password_here
DATABASE_URL=postgresql://orderly:orderly_secure_password_here@postgres:5432/orderly

# Redis Configuration  
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Application Configuration
NODE_ENV=production
APP_VERSION=1.0.0

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_here_change_in_production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# API Keys and External Services
API_RATE_LIMIT_MAX=1000
API_RATE_LIMIT_WINDOW=900000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=30000
HEALTH_CHECK_INTERVAL=60000

# Service URLs (for inter-service communication)
API_GATEWAY_URL=http://api-gateway:8000
USER_SERVICE_URL=http://user-service:3001
ORDER_SERVICE_URL=http://order-service:3002
PRODUCT_SERVICE_URL=http://product-service:3003
ACCEPTANCE_SERVICE_URL=http://acceptance-service:3004
BILLING_SERVICE_URL=http://billing-service:3005
NOTIFICATION_SERVICE_URL=http://notification-service:3006
ADMIN_SERVICE_URL=http://admin-service:3008

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8000

# Security Headers
SECURITY_HEADERS_ENABLED=true
SECURITY_HSTS_MAX_AGE=31536000

# Performance Configuration
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000

# Docker Registry (for production deployments)
DOCKER_REGISTRY=gcr.io/your-project-id

# Cloud Run Configuration
CLOUD_RUN_REGION=asia-east1
CLOUD_RUN_MIN_INSTANCES=0
CLOUD_RUN_MAX_INSTANCES=10
CLOUD_RUN_MEMORY=512Mi
CLOUD_RUN_CPU=1

# Monitoring and Observability
ENABLE_METRICS=true
ENABLE_TRACING=true
METRICS_PORT=9090

# Feature Flags
ENABLE_CACHE=true
ENABLE_RATE_LIMITING=true
ENABLE_CIRCUIT_BREAKER=true

# Development/Debug Flags
DEBUG=false
VERBOSE_LOGGING=false