# APM (Application Performance Monitoring) Configuration
# Copy this file to .env.apm.local and fill in your actual keys

# DataDog Configuration
DATADOG_ENABLED=true
DATADOG_API_KEY=your_datadog_api_key_here
DATADOG_APP_KEY=your_datadog_app_key_here
DATADOG_SITE=datadoghq.com
# Alternative sites:
# DATADOG_SITE=datadoghq.eu (for EU)
# DATADOG_SITE=us3.datadoghq.com (US3)
# DATADOG_SITE=us5.datadoghq.com (US5)

# New Relic Configuration
NEW_RELIC_ENABLED=true
NEW_RELIC_LICENSE_KEY=your_newrelic_license_key_here
NEW_RELIC_APP_NAME=Orderly API Gateway
NEW_RELIC_LOG_LEVEL=info

# Service Configuration
SERVICE_NAME=orderly-api-gateway
APP_VERSION=1.0.0
NODE_ENV=development

# APM Feature Flags
APM_TRACE_ENABLED=true
APM_METRICS_ENABLED=true
APM_BUSINESS_METRICS_ENABLED=true
APM_ERROR_TRACKING_ENABLED=true

# APM Performance Settings
APM_TRACE_SAMPLING_RATE=1.0
APM_METRICS_FLUSH_INTERVAL=30000
APM_TRACE_TIMEOUT=60000

# DataDog Advanced Configuration
DD_TRACE_ENABLED=true
DD_RUNTIME_METRICS_ENABLED=true
DD_LOGS_INJECTION=true
DD_TRACE_ANALYTICS_ENABLED=true
DD_PROFILING_ENABLED=true

# New Relic Advanced Configuration
NEW_RELIC_DISTRIBUTED_TRACING_ENABLED=true
NEW_RELIC_SPAN_EVENTS_ENABLED=true
NEW_RELIC_CUSTOM_INSIGHTS_EVENTS_ENABLED=true