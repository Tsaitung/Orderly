# å¤šéšŽæ®µæ§‹å»º - FastAPIæœå‹™æ¨™æº–æ¨¡æ¿
FROM python:3.11-slim AS base

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

WORKDIR /app

# ä¾è³´å®‰è£éšŽæ®µ
FROM base AS deps

RUN apt-get update && apt-get install -y \
    build-essential \
    libpq-dev \
    --no-install-recommends && \
    rm -rf /var/lib/apt/lists/*

COPY requirements.txt ./
RUN pip install --user --no-warn-script-location -r requirements.txt

# é‹è¡ŒéšŽæ®µ
FROM base AS runtime

RUN apt-get update && apt-get install -y \
    libpq5 \
    curl \
    --no-install-recommends && \
    rm -rf /var/lib/apt/lists/*

# è¤‡è£½ä¾è³´
COPY --from=deps /root/.local /root/.local

# è¤‡è£½æ‡‰ç”¨ç¨‹å¼
COPY app ./app
COPY alembic.ini ./alembic.ini
COPY alembic ./alembic

ENV PATH=/root/.local/bin:$PATH

# å‹•æ…‹ç«¯å£é…ç½® - æ ¸å¿ƒè¨­è¨ˆ ( è¨­3004)
ARG DEFAULT_PORT=3004
ENV PORT=${PORT:-${DEFAULT_PORT}}
EXPOSE ${PORT}

# å¥åº·æª¢æŸ¥
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:${PORT}/health || exit 1

# å•Ÿå‹•å‘½ä»¤ - æ”¯æ´å‹•æ…‹ç«¯å£
CMD ["sh", "-c", "alembic upgrade head 2>/dev/null || true && uvicorn app.main:app --host 0.0.0.0 --port ${PORT} --workers 1"]
