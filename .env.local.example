# .env.local.example
# Local development environment configuration (non-Docker)
# Copy this file to .env.local for local development

# ============================================================================
# LOCAL DEVELOPMENT ENVIRONMENT
# ============================================================================

NODE_ENV=development

# ============================================================================
# SERVICE PORTS (Local Development - No Docker)
# ============================================================================

# Frontend
FRONTEND_PORT=3000

# API Gateway
API_GATEWAY_PORT=8000

# Microservices (Internal Ports)
USER_SERVICE_PORT=3001
ORDER_SERVICE_PORT=3002
PRODUCT_SERVICE_PORT=3003
ACCEPTANCE_SERVICE_PORT=3004
BILLING_SERVICE_PORT=3005
NOTIFICATION_SERVICE_PORT=3006
ADMIN_SERVICE_PORT=3008

# ============================================================================
# API GATEWAY SERVICE URLS (Local Development)
# ============================================================================

USER_SERVICE_URL=http://localhost:3001
ORDER_SERVICE_URL=http://localhost:3002
PRODUCT_SERVICE_URL=http://localhost:3003
ACCEPTANCE_SERVICE_URL=http://localhost:3004
BILLING_SERVICE_URL=http://localhost:3005
NOTIFICATION_SERVICE_URL=http://localhost:3006

# ============================================================================
# DATABASE CONFIGURATION (Local PostgreSQL)
# ============================================================================

DATABASE_URL=postgresql://orderly:orderly_dev_password@localhost:5432/orderly
POSTGRES_DB=orderly
POSTGRES_USER=orderly
POSTGRES_PASSWORD=orderly_dev_password

# ============================================================================
# REDIS CONFIGURATION (Local Redis)
# ============================================================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# ============================================================================
# JWT CONFIGURATION
# ============================================================================

JWT_SECRET=dev-jwt-secret-change-in-production-12345
JWT_REFRESH_SECRET=dev-refresh-secret-change-in-production-67890
JWT_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================

NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api
NEXTAUTH_SECRET=dev-nextauth-secret-change-in-production
NEXTAUTH_URL=http://localhost:3000

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

LOG_LEVEL=DEBUG
LOG_FILE_ENABLED=true

# ============================================================================
# DEVELOPMENT FLAGS
# ============================================================================

ALLOW_SUPER_ADMIN_CREATION=true
DEBUG_MODE=true
DISABLE_AUTH=false

# ============================================================================
# EXTERNAL SERVICES (Optional - Set if needed)
# ============================================================================

# Twilio (for SMS)
# TWILIO_ACCOUNT_SID=your_twilio_sid
# TWILIO_AUTH_TOKEN=your_twilio_token
# TWILIO_PHONE_NUMBER=your_twilio_phone

# AWS (for S3 uploads)
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
# S3_BUCKET_NAME=your_bucket_name

# E-Invoice API
# EINVOICE_APP_ID=your_einvoice_app_id
# EINVOICE_API_KEY=your_einvoice_key