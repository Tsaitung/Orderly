# Orderly Platform Environment Variables

# =============================================================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# =============================================================================

# Node.js Environment
NODE_ENV=development

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# Next.js Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api
NEXTAUTH_SECRET=dev-nextauth-secret-change-in-production
NEXTAUTH_URL=http://localhost:8000

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=false

# =============================================================================
# BACKEND SERVICES CONFIGURATION
# =============================================================================

# API Gateway
API_GATEWAY_PORT=3000
JWT_SECRET=dev-jwt-secret-change-in-production

# User Service
USER_SERVICE_PORT=8001
USER_SERVICE_URL=http://user-service:8001

# Order Service (for future implementation)
ORDER_SERVICE_PORT=8002
ORDER_SERVICE_URL=http://order-service:8002

# Product Service (for future implementation)
PRODUCT_SERVICE_PORT=8003
PRODUCT_SERVICE_URL=http://product-service:8003

# Acceptance Service (for future implementation)
ACCEPTANCE_SERVICE_PORT=8004
ACCEPTANCE_SERVICE_URL=http://acceptance-service:8004

# Billing Service (for future implementation)
BILLING_SERVICE_PORT=8005
BILLING_SERVICE_URL=http://billing-service:8005

# Notification Service (for future implementation)
NOTIFICATION_SERVICE_PORT=8006
NOTIFICATION_SERVICE_URL=http://notification-service:8006

# Analytics Service (for future implementation)
ANALYTICS_SERVICE_PORT=8007
ANALYTICS_SERVICE_URL=http://analytics-service:8007

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL
DATABASE_URL=postgresql://orderly:orderly_dev_password@postgres:5432/orderly
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=orderly
POSTGRES_USER=orderly
POSTGRES_PASSWORD=orderly_dev_password

# =============================================================================
# CACHE & MESSAGING CONFIGURATION
# =============================================================================

# Redis
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# Elasticsearch
ELASTICSEARCH_URL=http://elasticsearch:9200

# =============================================================================
# EXTERNAL SERVICES (for future implementation)
# =============================================================================

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# File Storage (AWS S3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-northeast-1
S3_BUCKET_NAME=orderly-dev-uploads

# Payment Gateway
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# E-Invoice API (Taiwan)
EINVOICE_APP_ID=your_einvoice_app_id
EINVOICE_API_KEY=your_einvoice_api_key

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Logging
LOG_LEVEL=debug

# APM (Application Performance Monitoring)
DATADOG_API_KEY=your_datadog_api_key
NEWRELIC_LICENSE_KEY=your_newrelic_license_key

# Error Tracking
SENTRY_DSN=your_sentry_dsn

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:8000,http://localhost:3000

# =============================================================================
# CLOUD PLATFORM CONFIGURATION (for production deployment)
# =============================================================================

# Google Cloud Platform
GCP_PROJECT_ID=orderly-472413
GCP_REGION=asia-east1

# Cloud Run Configuration
CLOUD_RUN_SERVICE_NAME=orderly
CLOUD_RUN_MEMORY=1Gi
CLOUD_RUN_CPU=1
CLOUD_RUN_MAX_INSTANCES=100
CLOUD_RUN_MIN_INSTANCES=1

# =============================================================================
# CI/CD CONFIGURATION
# =============================================================================

# GitHub Actions
GITHUB_TOKEN=your_github_token

# Docker Registry
DOCKER_REGISTRY=gcr.io
DOCKER_IMAGE_TAG=latest

# =============================================================================
# HEALTH CHECKS & MONITORING
# =============================================================================

# Health Check URLs
FRONTEND_HEALTH_URL=http://localhost:8000/api/health
BACKEND_HEALTH_URL=http://localhost:3000/health
USER_SERVICE_HEALTH_URL=http://localhost:8001/health

# Monitoring Endpoints
PROMETHEUS_ENDPOINT=http://localhost:9090
GRAFANA_ENDPOINT=http://localhost:3001