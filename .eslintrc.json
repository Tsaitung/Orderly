{
  "extends": ["next/core-web-vitals"],
  "rules": {
    "prefer-const": "error",
    "no-var": "error",
    "no-console": [
      "warn",
      {
        "allow": ["warn", "error"]
      }
    ],
    "eqeqeq": ["error", "always"],
    "curly": ["error", "all"],
    "no-eval": "error",
    "no-implied-eval": "error",
    "no-new-func": "error",
    "no-script-url": "error",
    "prefer-arrow-callback": "error",
    "arrow-spacing": "error",
    "no-duplicate-imports": "error",
    "no-restricted-syntax": [
      "error",
      {
        "selector": "CallExpression[callee.name='useCustomerHierarchyStore'][arguments.length=0]",
        "message": "Always use a selector with useCustomerHierarchyStore, e.g. useCustomerHierarchyStore(s => s.loadTree)"
      }
    ],
    "no-restricted-imports": [
      "error",
      {
        "paths": [
          {
            "name": "@/components/ui/dialog",
            "message": "Use AccessibleModal from '@/components/ui/accessible-modal' instead."
          }
        ]
      }
    ]
  },
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "ignorePatterns": ["node_modules/", ".next/", "out/", "build/", "dist/"]
}
